<!DOCTYPE html>
<html lang="en">
<%- include('partials/header')%>
<body>
    <%- include('partials/navbar')%>
    <button class = 'primary-btn create-btn'><a href="/worlds/new">Create New World</a></button>
    <div class="grid-wrapper">
        <div class="worlds-grid">
            <% worlds.forEach((world) => { %>
                <a href = "/worlds/world/<%= world.id %>">
                    <div class = 'world-box'>
                        <h1><%= world.name %></h1>
                    </div>
                </a>
            <% }) %>
        </div>
    </div>
</body>
</html>